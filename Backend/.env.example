# ========================================
# Shuttle Tracker API - Environment Variables
# ========================================

# Application Settings
APP_NAME=Shuttle Tracker API
APP_VERSION=2.0.0
DEBUG=True
API_BASE_URL=http://localhost:8000

# ========================================
# Security & Authentication
# ========================================

# SECRET_KEY: Used for JWT token signing
# IMPORTANT: Must be at least 32 characters long
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-min-32-characters-long

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ========================================
# Admin Credentials
# ========================================

# Default admin account credentials
# WARNING: Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ========================================
# Database Configuration
# ========================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./shuttle_tracker.db

# MySQL (uncomment for production)
# DATABASE_URL=mysql+pymysql://username:password@localhost/shuttle_tracker

# ========================================
# EERA GPS API Configuration
# ========================================

# EERA GPS tracking platform settings
EERA_BASE_URL=https://track.eeragpshouse.com
EERA_ENDPOINT=/api/middleMan/getDeviceInfo
EERA_API_KEY=your-eera-api-key-here

# GPS data freshness threshold (seconds)
# Data older than this is considered stale and fixed speed fallback is used
GPS_DATA_STALE_THRESHOLD=30

# Vehicle sync interval (seconds)
# How often to sync vehicle list from EERA API (default: 300 = 5 minutes)
VEHICLE_SYNC_INTERVAL=300

# ========================================
# CORS (Cross-Origin Resource Sharing)
# ========================================

# Allowed origins for API access
# Development: Use * to allow all origins
# Production: Specify exact domains (comma-separated)
CORS_ORIGINS=*

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# ========================================
# OSRM Routing (for ETA endpoints)
# ========================================
# Note: The ETA endpoints use the public OSRM server by default
# No configuration needed unless you're self-hosting OSRM
# To use a self-hosted OSRM server, update the base_url in:
# app/services/osrm.py -> OSRMService.__init__()
